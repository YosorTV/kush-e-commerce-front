{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "allowJs": true,
    "incremental": true,
    "module": "esnext" /* Specify module code generation. */,
    "moduleResolution": "node" /* Specify module resolution strategy. Type declaration files to be included in compilation. */,
    "types": ["react", "react-dom", "node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve" /* Specify JSX code generation: 'preserve', 'react-native', 'react' or 'react-jsx'. */,
    "noEmit": true /* Do not emit outputs. */,
    "esModuleInterop": true /* Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports. Implies 'allowSyntheticDefaultImports'. */,
    "strict": false /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking of declaration files. */,
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"],
      "@/adapters": ["adapters/index"],
      "@/adapters/*": ["adapters/*"],
      "@/app/*": ["app/*"],
      "@/assets": ["assets/index"],
      "@/assets/*": ["assets/*"],
      "@/components": ["components/index"],
      "@/components/*": ["components/*"],
      "@/elements": ["components/elements/index"],
      "@/elements/*": ["components/elements/*"],
      "@/layouts": ["components/layouts/index"],
      "@/layouts/*": ["components/layouts/*"],
      "@/lib": ["lib/index"],
      "@/lib/*": ["lib/*"],
      "@/modules": ["components/modules/index"],
      "@/models": ["models/index"],
      "@/models/*": ["models/*"],
      "@/modules/*": ["components/modules/*"],
      "@/providers": ["providers/index"],
      "@/providers/*": ["providers/*"],
      "@/services": ["services/index"],
      "@/services/*": ["services/*"],
      "@/store": ["store/index"],
      "@/store/*": ["store/*"],
      "@/styles/*": ["assets/styles/*"],
      "@/units": ["components/units/index"],
      "@/units/*": ["components/units/*"],
      "@/utils": ["utils/index"],
      "@/utils/*": ["utils/*"],
      "@/types": ["types/index"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.ts",
    "postcss.config.js",
    "tailwind.config.js",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
